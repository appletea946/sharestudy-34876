<%= render partial: "/shared/header" %>

<div class="main-flame">
  <div class="user-info">

    <%= render partial: "shared/user_info" %>
    
    <div class="group-index">
      <%= form_with(url: search_groups_path, local: true, method: :get, class: "search-box") do |f| %>
        <%= f.check_box :switch ,{class: "search-switch"}, "true", "false" %>
        <%= label_tag :switch, "Myグループ?", class: "search-label" %>
        <%= f.text_field :keyword, placeholder: "グループを検索する", class: "search-input" %>
        <%= f.submit "検索", class: "search-btn" %>
      <% end %>
        <h2 class="head-text">グループ一覧</h2>
      <div class="groups">

        <%= render partial: "shared/group", collection: @groups %>

      </div>
    </div>
  </div>
</div>

<%= link_to "作成", new_group_path, class: "right-btn" %>

<%= render partial: "/shared/footer" %>