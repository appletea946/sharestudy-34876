<%= render partial: "/shared/header" %>

<%= form_with url: sign_in_groups_path, class: 'group-form', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      <%= @group.name %>グループに参加
    </h1>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password" %>
  </div>

  <%= f.hidden_field :group_id, class:"input-default", value: @group.id %>

  <div class='register-btn'>
    <%= f.submit "参加" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>

<%= link_to "戻る", groups_path, class: "left-btn" %>

<%= render partial: "/shared/footer" %>