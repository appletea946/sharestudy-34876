<%= render partial: "/shared/header" %>

<%= form_with model: @group, url: groups_path, class: 'group-form', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      グループ作成
    </h1>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">グループの名前</label>
    </div>
    <%= f.text_field :name, class:"input-default", id:"name" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password" %>
  </div>

  <div class='register-btn'>
    <%= f.submit "作成" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>

<%= link_to "戻る", groups_path, class: "left-btn" %>

<%= render partial: "/shared/footer" %>