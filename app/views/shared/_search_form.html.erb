<%= form_with(url: search_articles_path, local: true, method: :get, class: "search-box") do |f| %>
  <% if user_signed_in? %>
    <%= f.check_box :switch ,{class: "search-switch"}, "true", "false" %>
    <%= label_tag :switch, "お気に入り記事", class: "search-label" %>
    <%= f.hidden_field :current_user_id, value: current_user.id %>
  <% else %>
    <%= f.hidden_field :switch, value: "false" %>
  <% end %>
  <%= f.collection_select :tag_id, @tags, :id, :name, {prompt: "タグを選択"}, {class: "search-tag"} %>
  <%= f.text_field :keyword, placeholder: "記事を検索する", class: "search-input" %>
  <%= f.submit "検索", class: "search-btn" %>
<% end %>