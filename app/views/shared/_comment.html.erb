<li class="comment">
  <div class="comment-user-info">
    <% if comment.user.image.attached? %>
      <%= image_tag comment.user.image, class: "comment-user-image" %>
    <% else %>
      <%= image_tag "random#{comment.user.id % 7}.png", class: "comment-user-image" %>
    <% end %>
    <div class="comment-user-name-date">
      <%= comment.user.nickname %>ï¼š<%= comment.created_at.strftime('%Y-%m-%d/%H:%M:%S') %>
    </div>
  </div>
  <div class="comment-content">
    <%= markdown(h(comment.content)) %>
  </div>
</li>